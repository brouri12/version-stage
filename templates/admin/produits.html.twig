{% extends 'base.html.twig' %}
{% block title %}Gestion des produits{% endblock %}
{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-6">Produits</h1>
    <a href="{{ path('admin_dashboard') }}" class="mb-4 inline-block px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400">Retour au dashboard</a>
    <a href="{{ path('admin_produits_add') }}" class="mb-4 ml-2 inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Ajouter un produit</a>
    <div class="overflow-x-auto">
        <table id="datatable" class="min-w-full bg-white rounded shadow">
            <thead>
                <tr>
                    <th class="px-4 py-2">Image</th>
                    <th class="px-4 py-2">Nom</th>
                    <th class="px-4 py-2">Catégorie</th>
                    <th class="px-4 py-2">Genre</th>
                    <th class="px-4 py-2">Prix</th>
                    <th class="px-4 py-2">Stock</th>
                    <th class="px-4 py-2">Tailles</th>
                    <th class="px-4 py-2">Promotions</th>
                    <th class="px-4 py-2">Couleurs/Images</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                <tr class="border-t">
                    <td class="px-4 py-2">
                        {% set mainImage = null %}
                        {% for i in produit.images %}
                            {% if i.isMain and mainImage is null %}
                                {% set mainImage = i %}
                            {% endif %}
                        {% endfor %}
                        {% if mainImage is null %}{% set mainImage = produit.images|first %}{% endif %}
                        {% if mainImage and mainImage.cloudinaryPublicId %}
                            <img src="{{ cloudinary_thumbnail(mainImage.cloudinaryPublicId) }}" alt="{{ produit.nomProduit }}" style="max-width: 100px; max-height: 100px;">
                        {% elseif mainImage and mainImage.url %}
                            <img src="{{ mainImage.url }}" alt="{{ produit.nomProduit }}" style="max-width: 100px; max-height: 100px;">
                        {% elseif produit.cloudinaryPublicId %}
                            <img src="{{ cloudinary_thumbnail(produit.cloudinaryPublicId) }}" alt="{{ produit.nomProduit }}" style="max-width: 100px; max-height: 100px;">
                        {% elseif produit.imageProduit %}
                            {% set imgPath = produit.imageProduit starts with 'apploads/' ? produit.imageProduit : 'apploads/' ~ produit.imageProduit %}
                            <img src="{{ asset(imgPath) }}" alt="{{ produit.nomProduit }}" style="max-width: 100px; max-height: 100px;">
                        {% else %}
                            <span>Aucune image</span>
                        {% endif %}
                    </td>
                    <td class="px-4 py-2">{{ produit.nomProduit }}</td>
                    <td class="px-4 py-2">{{ produit.categorie ? produit.categorie.nomCategorie : '' }}</td>
                    <td class="px-4 py-2">{{ produit.genre|capitalize }}</td>
                    <td class="px-4 py-2">{{ produit.prixUnitaire }} TND</td>
                    <td class="px-4 py-2">{{ produit.stockTotal is not null ? produit.stockTotal : '-' }}</td>
                    <td class="px-4 py-2">
                        {% if produit.produitSizes|length > 0 %}
                            <ul class="list-disc pl-4 space-y-1">
                                {% for s in produit.produitSizes %}
                                    <li>
                                      <span class="font-medium">{{ s.size }}</span>
                                      <span class="text-gray-600">({{ s.quantite }})</span>
                                      {% set entries = (sizeColorMap[produit.id][s.size]|default([])) %}
                                      {% if entries|length > 0 %}
                                        <span class="ml-2 inline-flex flex-wrap gap-1 align-middle">
                                          {% for e in entries %}
                                            {% set hx = e.hex ? e.hex|trim : '' %}
                                            {% if hx and not (hx starts with '#') %}{% set hx = '#' ~ hx %}{% endif %}
                                            <span class="inline-flex items-center gap-1 border rounded px-1 py-0.5 text-xs">
                                              <span class="inline-block w-3 h-3 rounded-full border" style="background-color: {{ hx ? hx : '#e5e7eb' }}"></span>
                                              <span>{{ e.qty }}</span>
                                            </span>
                                          {% endfor %}
                                        </span>
                                      {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}-{% endif %}
                        {% set cat = produit.categorie ? produit.categorie.nomCategorie|lower|replace({'é':'e','è':'e','ê':'e','ë':'e'}) : '' %}
                        {% if cat matches '/^vetement(s)?$/' %}
                            <a href="{{ path('admin_produits_add_size_multi', {'id': produit.id}) }}" class="ml-2 px-2 py-1 bg-green-500 text-white rounded hover:bg-green-600 text-xs">Ajouter taille</a>
                        {% elseif cat matches '/^chaussure(s)?$/' %}
                            <a href="{{ path('admin_produits_add_size_shoes', {'id': produit.id}) }}" class="ml-2 px-2 py-1 bg-green-500 text-white rounded hover:bg-green-600 text-xs">Ajouter pointure</a>
                        {% else %}
                            <span class="ml-2 px-2 py-1 bg-gray-300 text-gray-700 rounded text-xs cursor-not-allowed">Stock manuel</span>
                        {% endif %}
                    </td>
                    <td class="px-4 py-2">{{ produit.promotions|length > 0 ? produit.promotions|map(p => p.codePromotion)|join(', ') : '-' }}</td>
                    <td class="px-4 py-2">
                        <div class="text-xs text-gray-700">{{ produit.colors|length }} couleur(s), {{ produit.images|length }} image(s)</div>
                        <div class="mt-1 flex gap-2">
                            <a href="{{ path('admin_produits_colors', {'id': produit.id}) }}" class="px-2 py-1 bg-purple-500 text-white rounded hover:bg-purple-600 text-xs">Gérer couleurs</a>
                            <a href="{{ path('admin_produits_images', {'id': produit.id}) }}" class="px-2 py-1 bg-indigo-500 text-white rounded hover:bg-indigo-600 text-xs">Gérer images</a>
                            {% set cat = produit.categorie ? produit.categorie.nomCategorie|lower|replace({'é':'e','è':'e','ê':'e','ë':'e'}) : '' %}
                            {% if cat matches '/^vetement(s)?$/' %}
                              <a href="{{ path('admin_produits_size_color', {'id': produit.id}) }}" class="px-2 py-1 bg-pink-500 text-white rounded hover:bg-pink-600 text-xs">Taille/Couleur</a>
                            {% endif %}
                        </div>
                    </td>
                    <td class="px-4 py-2">
                        <a href="{{ path('admin_produits_edit', {'id': produit.id}) }}" class="text-blue-600 hover:underline">Modifier</a> |
                        <a href="{{ path('admin_produits_delete', {'id': produit.id}) }}" class="text-red-600 hover:underline" onclick="return confirm('Supprimer ce produit ?');">Supprimer</a>
                        {% set cat = produit.categorie ? produit.categorie.nomCategorie|lower|replace({'é':'e','è':'e','ê':'e','ë':'e'}) : '' %}
                        {% if cat matches '/^accessoire(s)?$/' %}
                            | <a href="{{ path('admin_produits_set_stock', {'id': produit.id}) }}" class="ml-2 px-2 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600 text-xs">Modifier stock</a>
                        {% endif %}
                    </td>
                </tr>
                {% else %}
                <tr><td colspan="7" class="text-center py-4">Aucun produit</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#datatable').DataTable();
        });
    </script>
{% endblock %} 