{% extends 'base.html.twig' %}
{% block title %}Images - {{ produit.nomProduit }}{% endblock %}
{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between mb-4">
        <a href="{{ path('admin_produits') }}" class="px-3 py-2 bg-gray-200 rounded">Retour</a>
        <div class="flex gap-2">
          <a href="{{ path('admin_produits_colors', {'id': produit.id, 'wizard': wizard ? 1 : null }) }}" class="px-3 py-2 bg-purple-500 text-white rounded">Gérer couleurs</a>
          {% if wizard %}
            <a href="{{ nextUrl }}" class="px-3 py-2 bg-blue-600 text-white rounded">Suivant</a>
          {% endif %}
        </div>
    </div>
    {% include 'admin/partials/_wizard_steps.html.twig' with { wizard: wizard, steps: steps|default([]), currentStep: currentStep, produit: produit } %}
    <h1 class="text-2xl font-bold mb-4">Images pour {{ produit.nomProduit }}</h1>

    {% if error %}
        <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded">{{ error }}</div>
    {% endif %}

    <form method="post" enctype="multipart/form-data" class="bg-white p-4 rounded shadow max-w-2xl">
        <div class="mb-3">
            <label class="block text-sm font-medium">Fichiers images</label>
            <input type="file" name="images[]" multiple accept="image/*" class="w-full border rounded px-3 py-2">
        </div>
        <div class="mb-3">
            <label class="block text-sm font-medium">Couleur (optionnel)</label>
            <select name="color_id" class="border rounded px-3 py-2">
                <option value="">Aucune</option>
                {% for c in produit.colors %}
                    <option value="{{ c.id }}">{{ c.name }}{% if c.hexCode %} ({{ c.hexCode }}){% endif %}</option>
                {% endfor %}
            </select>
        </div>
        <div class="mb-3">
            <label class="inline-flex items-center gap-2">
                <input type="checkbox" name="set_main_first">
                <span>Définir la première image comme principale</span>
            </label>
        </div>
        <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded">Téléverser</button>
    </form>

    <div class="mt-8 bg-white p-4 rounded shadow">
        <h2 class="text-lg font-semibold mb-3">Galerie</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            {% for img in produit.images %}
                <div class="border rounded p-2">
                    {% if img.cloudinaryPublicId %}
                        <img src="{{ cloudinary_thumbnail(img.cloudinaryPublicId) }}" class="w-full h-32 object-cover rounded">
                    {% else %}
                        <img src="{{ img.url }}" class="w-full h-32 object-cover rounded">
                    {% endif %}
                    <div class="mt-2 flex items-center justify-between text-xs">
                        <span>{% if img.color %}{{ img.color.name }}{% else %}-{% endif %}</span>
                        {% if img.isMain %}<span class="px-2 py-0.5 bg-green-100 text-green-700 rounded">Principale</span>{% endif %}
                    </div>
                    <div class="mt-2 flex gap-2">
                        <form method="post" action="{{ path('admin_produits_images_set_main', {'produitId': produit.id, 'imageId': img.id}) }}">
                            <button class="px-2 py-1 bg-blue-500 text-white rounded text-xs">Définir principale</button>
                        </form>
                        <form method="post" action="{{ path('admin_produits_images_delete', {'produitId': produit.id, 'imageId': img.id}) }}" onsubmit="return confirm('Supprimer cette image ?');">
                            <button class="px-2 py-1 bg-red-500 text-white rounded text-xs">Supprimer</button>
                        </form>
                    </div>
                </div>
            {% else %}
                <div class="col-span-4 text-center text-gray-500">Aucune image</div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

